{
  "env": {
    "browser": false,
    "node": true
  },
  "rules": {
    "quotes": [2, "single", "avoid-escape"],
    "no-underscore-dangle": [0],
    "no-use-before-define": [2, "nofunc"]
  },
  "globals": {
    "global": false,
    "window": false,
    "describe": true,
    "it": true,
    "beforeEach": true,
    "afterEach": true
  }
}
